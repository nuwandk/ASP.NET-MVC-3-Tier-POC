@model IEnumerable<Hrm.Main.WebApplication.Models.EmployeeViewModel>

@{
    ViewBag.Title = "Employee Dashboard";
}

<h2 style="font-family:Arial; font-size:25px">Employee Dashboard</h2>
<br />
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" style="font-family:Arial; font-size:12px">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salary)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.DateOfJoin)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.DepartmentInfo.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DesignationsInfo.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmpId)
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.EmployeesInfo2.FirstName)*@
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salary)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.DateOfJoin)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.DepartmentInfo.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DesignationsInfo.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmpId)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.EmpId }) |
            @Html.ActionLink("Details", "Details", new { id=item.EmpId }) | 
            @Html.ActionLink("Delete", "Delete", new { id=item.EmpId })
        </td>
    </tr>
}

</table>
